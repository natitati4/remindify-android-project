<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTaskName"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tvTaskDescription"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="#0E2DF5"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTaskDateDeadline"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Deadline date"
            android:textSize="14sp"
            android:textColor="#278A02"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tvTaskTimeDeadLine"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Deadline time"
            android:textSize="14sp"
            android:textColor="#278A02"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivTaskTimeUp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_baseline_access_time_green_24"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:focusable="false"
        android:id="@+id/btnTaskDone"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/selector_button_done_state"
        />
</LinearLayout>

