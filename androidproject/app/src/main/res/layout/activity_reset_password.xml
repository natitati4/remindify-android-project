<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/user_managment_background"
    android:orientation="vertical">

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <ImageButton
        android:id="@+id/btnResetPasswordBack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/selector_button_back_state"
        />

    <EditText
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:hint="Username"
        android:id="@+id/etResetPasswordUsername"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="10sp"
        android:text="Send code"
        android:id="@+id/btnResetPasswordSendCode"/>

</LinearLayout>